<div class="wrapper">
    {{> navbar}}
    {{> sidebar}}


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Dashboard</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">All Users</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">All Users</h3>

                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right"
                                            placeholder="Search">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0">
                                <form class="form-horizontal">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="">Username</label>
                                                    <input type="text" name="username" id="startdate"
                                                        class="form-control" placeholder="" aria-describedby="helpId">

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="">Phone No</label>
                                                    <input type="number" name="phoneno" id="enddate"
                                                        class="form-control" placeholder="" aria-describedby="helpId">

                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <br />
                                                <button class="btn btn-primary" type="submit">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>Username</th>
                                            <th>Phone No</th>
                                            <th>Credit</th>
                                            <th>Status</th>
                                            <th>OverAll Points</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each users}}
                                        <tr>
                                            <td>{{username}}</td>
                                            <td>{{phoneno}}</td>
                                            <td>{{credit}}</td>
                                            <td>
                                                {{#if active}}
                                                <badge class="badge badge-success">Active</badge>
                                                {{else}}
                                                <badge class="badge badge-danger">Not Active</badge>
                                                {{/if}}
                                            </td>
                                            <td>{{overallpoint}}</td>
                                            <td>
                                                <button class="btn btn-xs btn-danger"
                                                    onclick="blockUser({{id}})">Block</button>
                                                <button class="btn btn-xs btn-success"
                                                    onclick="unblockUser({{id}})">UnBlock</button>

                                                <button class="btn btn-xs btn-success"
                                                    onclick="showDeviceToken({{registrationtoken}})">UnBlock</button>

                                                {{!-- <a href="/admin/reports?quizid={{id}}"
                                                    class="btn btn-xs btn-success">Quiz Report</a> --}}
                                            </td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </section>
    </div>



</div>

<script src="/plugins/jquery/jquery.min.js"></script>
<script>
    $('document').ready(function (event) {
        $('body').addClass('hold-transition sidebar-mini layout-fixed')
    })

    function showDeviceToken(token) {
        alert(token);
    }
    //unblock-user



    function blockUser(id) {
        var resp = prompt("Are you sure?");
        if (resp.toLowerCase() === 'yes' || resp.toLowerCase() === 'y') {
            window.location.href = "/admin/block-user?userid=" + id
        } else {
            alert('cancled')
        }
    }

    function unblockUser(id) {
        var resp = prompt("Are you sure you want to unblock user?");
        if (resp.toLowerCase() === 'yes' || resp.toLowerCase() === 'y') {
            window.location.href = "/admin/unblock-user?userid=" + id
        } else {
            alert('cancled')
        }
    }
</script>